<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" href="http://bootswatch.com/paper/bootstrap.min.css">

  <title>Touragogo</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body>
<nav class="navbar navbar-default hidden-xs hidden-sm">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-menu" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Guide Me</a>
    </div>

    <div class="collapse navbar-collapse" id="main-menu">
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li><%= link_to 'My Tours', tours_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: 'DELETE' %></li>
        <% else %>
          <li><%= link_to "Sign In", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<%= yield %>
<div id='local-video' style="position: relative; z-index: 2;">local video</div>
<div id='remote-video' style="position: relative; z-index: 2;">remote video</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src="https://kandy-portal.s3.amazonaws.com/public/javascript/kandy/2.4.1/kandy.js" ></script>
<script>
  <% if current_user %>
    $(function() {
      var fullUserId = '<%= current_user.kandy_id %>';
      var userPassword = '<%= current_user.kandy_password %>';
      var domainApiKey = 'DAK2dc941ec92254fad9cda939b8bb05de4';

      kandy.setup({
        remoteVideoContainer: document.getElementById('remote-video'),
        localVideoContainer: document.getElementById('local-video'),
        listeners: {
          callincoming: onCallIncoming
        },
        autoreconnect: true,
        registerforcalls: true,
        loglevel: 'debug'
      });

      kandy.login(domainApiKey, fullUserId, userPassword,
        function(token) {
          console.log('Kandy login succeeded, token: ', token);
        },
        function() {
          console.log('Kandy login failed');
        }
      );

      function onCallIncoming(call) {
        console.log('Incoming call');
      }

      window.kandyCall = function(destination) {
        var opts = {
          remoteVideoContainer: document.getElementById('remote-video'),
          localVideoContainer: document.getElementById('local-video')
        }
        kandy.call.makeCall(destination, false, fullUserId, opts);
      }
    });
  <% end %>
</script>
</body>
</html>
