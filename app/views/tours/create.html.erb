<form>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" placeholder="Title">
  </div>

  <div class="form-group">
    <label for="country">Country</label>
    <select class="form-control" id="country" name="country">
      <option selected value="ua">Ukraine</option>
      <option value="gb">United Kingdom</option>
      <option value="it">Italy</option>
      <option value="fr">France</option>
    </select>
  </div>

  <div class="form-group">
    <label for="language">Language</label>
    <select multiple class="form-control" id="language" name="language">
      <option selected value="it">Italian</option>
      <option value="uk">Ukranian</option>
      <option value="en">English</option>
    </select>
  </div>

  <div class="form-group">
    <label for="cover">File input</label>
    <input type="file" id="cover">
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    <input type="date" class="form-control" id="date" name="date">
  </div>

  <button class="btn btn-primary">Create your tour</button>
</form>